
.body {
	display: block;
	
	
	height: 100vh;
	
	width: 100%;
	background-color: #f7f8f8;
}
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	height: 132rpx;
	width: 100%;
	border-top: 4rpx solid #F7F8F8;
	background: #FFFFFF;
}
.content-left {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-flex: 5;
	-webkit-flex: 5;
	    -ms-flex: 5;
	        flex: 5;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.text-content-1 {
	font-size: 35rpx;
	margin-left: 20rpx;
}
.text-content-2 {
	font-size: 35rpx;
	color: #b5b5b6;
}
.content-right {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.btn {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	margin-right: 30rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	font-size: 30rpx;
	color: #FFFFFF;
	border-radius: 30rpx;
	width: 200rpx;
	height: 70rpx;
}

